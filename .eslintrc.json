{
    "plugins": [],
    "extends": [
        "airbnb"
    ],
    "parser": "",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "rules": {
        "react/prefer-stateless-function": "off",
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/jsx-indent": [1, 4],
        "semi": 2,
        "curly": [
            2,
            "all"
        ],
        "no-param-reassign": [
            2,
            {
                "props": false
            }
        ],
        "indent": [1, 4],
        "jsx-a11y/href-no-hash": "off",
        "operator-linebreak": [
            2,
            "after"
        ],
        "camelcase": [
            2,
            {
                "properties": "never"
            }
        ],
        "no-multi-str": 2,
        "no-mixed-spaces-and-tabs": 1,
        "no-trailing-spaces": 2,
        "space-unary-ops": [
            2,
            {
                "nonwords": false,
                "overrides": {}
            }
        ],
        "keyword-spacing": [
            2,
            {}
        ],
        "comma-dangle": [
            "error",
            {
                "arrays": "always-multiline",
                "objects": "always-multiline",
                "imports": "always-multiline",
                "exports": "always-multiline",
                "functions": "never"
            }
        ],
        "space-infix-ops": 2,
        "space-before-blocks": [
            2,
            "always"
        ],
        "eol-last": 2,
        "space-in-parens": [
            2,
            "never"
        ],
        "no-multiple-empty-lines": 2,
        "max-len": [
            2,
            100,
            2,
            {
                "ignoreRegExpLiterals": true,
                "ignoreStrings": true,
                "ignoreComments": true
            }
        ]
    },
    "globals": {
        "document": false
    }
}